---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- SEO básico -->
		 <!-- Título y descripción optimizados para SEO -->
    <title>Clínica Dental San Patricio | Dentistas en Madrid - Latina</title>
    <meta name="description" content="Clínica Dental San Patricio, tu dentista de confianza en Madrid, distrito de Latina. Especialistas en odontología general, ortodoncia, implantes y salud bucodental para todas las edades." />

    	<meta name="keywords" content="clínica dental madrid, dentista latina, ortodoncia madrid, implantes dentales, odontología madrid" />


		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<!-- Estilos -->
		<link rel="stylesheet" href="/src/styles/global.css" />

		<!-- Astro generator -->
		<meta name="generator" content={Astro.generator} />

		
	</head>
	<body>
		<script>
			const validPaths = ["/", "/citas", "/sobre-nosotros"];
			const currentPath = window.location.pathname;

			if (!validPaths.includes(currentPath)) {
				window.location.href = "/";
			}
		</script>

		<slot />
		<Header />







		<Footer />
	</body>
</html>


<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
