---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- SEO básico -->
		<title>Clínica Dental San Patricio | Dentistas en Madrid - Latina</title>
		<meta name="description" content="Clínica Dental San Patricio en Madrid, distrito de Latina. Expertos en odontología general, ortodoncia, implantes y salud bucodental para toda la familia." />

		<!-- Open Graph / Facebook -->
		<meta property="og:title" content="Clínica Dental San Patricio | Dentistas en Madrid - Latina" />
		<meta property="og:description" content="Expertos en odontología general, implantes, ortodoncia y más en el distrito de Latina, Madrid." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://www.clinicasanpatricio.com/" />
		<meta property="og:image" content="https://www.clinicasanpatricio.com/og-image.jpg" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Clínica Dental San Patricio | Dentistas en Madrid - Latina" />
		<meta name="twitter:description" content="Odontología moderna y cercana en el barrio de Latina, Madrid. ¡Pide tu cita hoy!" />
		<meta name="twitter:image" content="https://www.clinicasanpatricio.com/og-image.jpg" />

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<!-- Estilos -->
		<link rel="stylesheet" href="/src/styles/global.css" />

		<!-- Astro generator -->
		<meta name="generator" content={Astro.generator} />
	</head>
	<body>
		<slot />
		<Header />







		<Footer />
	</body>
</html>


<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
