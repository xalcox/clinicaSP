---
import "../styles/global.css";
---
<!-- Header fijo y limpio -->
<header id="header" class="transition-all duration-300 fixed top-4 left-1/2 transform -translate-x-1/2 z-50 w-[90%] max-w-[900px] bg-white/90 backdrop-blur-md border border-white/40 shadow-2xl rounded-full px-6 py-3 flex items-center justify-between">
  <a href="/" class="flex items-center">
    <img src="/imgs/logo.png" alt="Clínica Dental San Patricio" class="h-12 w-auto md:h-16" />
  </a>

  <nav class="hidden md:flex items-center gap-6">
    <a href="sobre-nosotros" class="text-base font-semibold text-[#0c4f1e] hover:text-[#7cc518] transition">
      Sobre Nosotros
    </a>
    <a href="citas" class="bg-[#7cc518] text-white text-sm font-bold py-2 px-6 rounded-full hover:bg-[#6ab213] transition">
      Pedir Cita
    </a>
  </nav>

<!-- Botón hamburguesa móvil -->
    <button
      id="hamburger"
      class="md:hidden w-10 h-10 relative flex items-center justify-center"
      aria-label="Abrir menú"
    >
      <span
        class="bar bar-top absolute w-6 h-0.5 bg-[#0c4f1e] transition-all duration-300 top-1/2 left-0 transform translate-y-[-6px] origin-center"
      ></span>
      <span
        class="bar bar-bottom absolute w-6 h-0.5 bg-[#0c4f1e] transition-all duration-300 top-1/2 left-0 transform translate-y-[6px] origin-center"
      ></span>
    </button>


</header>

<!-- Menú móvil POSICIONADO DEBAJO -->
<div id="mobile-menu" class="hidden md:hidden fixed top-[96px] left-1/2 transform -translate-x-1/2 z-40 w-[90%] max-w-[900px] bg-white rounded-2xl shadow-xl px-6 py-4 flex-col items-center gap-4 border border-white/50 backdrop-blur-md transition-all duration-300">
  <a href="sobre-nosotros" class="text-base font-semibold text-[#0c4f1e] hover:text-[#7cc518] transition">
    Sobre Nosotros
  </a>
  <a href="citas" class="bg-[#7cc518] text-white text-sm font-bold py-2 px-6 rounded-full hover:bg-[#6ab213] transition">
    Pedir Cita
  </a>
</div>

<!-- JavaScript -->
<script>
  
    const hamburger = document.getElementById('hamburger');
    const menu = document.getElementById('mobile-menu');
     // @ts-ignore
    const barTop = hamburger.querySelector('.bar-top');
     // @ts-ignore
    const barBottom = hamburger.querySelector('.bar-bottom');

    let open = false;
     // @ts-ignore
    hamburger.addEventListener('click', () => {
      open = !open;
       // @ts-ignore
      menu.classList.toggle('hidden', !open);
       // @ts-ignore
      menu.classList.toggle('flex', open);

      if (open) {
         // @ts-ignore
        barTop.classList.remove('translate-y-[-6px]');
         // @ts-ignore
        barTop.classList.add('rotate-45', 'translate-y-[-50%]');
         // @ts-ignore
        barBottom.classList.remove('translate-y-[6px]');
         // @ts-ignore
        barBottom.classList.add('-rotate-45', 'translate-y-[-50%]');
      } else {
         // @ts-ignore
        barTop.classList.remove('rotate-45', 'translate-y-[-50%]');
         // @ts-ignore
        barTop.classList.add('translate-y-[-6px]');
         // @ts-ignore
        barBottom.classList.remove('-rotate-45', 'translate-y-[-50%]');
         // @ts-ignore
        barBottom.classList.add('translate-y-[6px]');
      }
    });

</script>







